#get-credentials.modal.fade
    .modal-dialog
        .modal-content
            .modal-header
                h4.modal-title Email Verification
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body
                form(method="post")#get-credentials-form
                    .form-group
                        label Please enter the email address associated with your account
                        input.form-control(type="text", id='otp-tf', name="email").required
                        .alert.alert-danger.hide
            .modal-footer
                button(data-dismiss="modal")#cancel.btn.btn-outline-dark Cancel
                button(type="submit")#authentication-submit.btn.btn-primary Submit